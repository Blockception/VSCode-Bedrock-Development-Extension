{
  "main": "./client/out/extension.js",
  "version": "1.5.1",
  "activationEvents": [
    "onLanguage:bc-minecraft-language",
    "onLanguage:bc-minecraft-mcfunction",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onCommand:bc-create-entity",
    "onCommand:bc-create-language-all",
    "onCommand:bc-create-manifest-all",
    "onCommand:bc-create-behavior_pack-animation_controllers",
    "onCommand:bc-create-behavior_pack-animations",
    "onCommand:bc-create-behavior_pack-block",
    "onCommand:bc-create-behavior_pack-entity",
    "onCommand:bc-create-behavior_pack-item",
    "onCommand:bc-create-behavior_pack-language",
    "onCommand:bc-create-behavior_pack-loot_table",
    "onCommand:bc-create-behavior_pack-manifest",
    "onCommand:bc-create-behavior_pack-recipe",
    "onCommand:bc-create-behavior_pack-spawn_rule",
    "onCommand:bc-create-behavior_pack-trading",
    "onCommand:bc-create-resource_pack-animation_controllers",
    "onCommand:bc-create-resource_pack-animations",
    "onCommand:bc-create-resource_pack-attachable",
    "onCommand:bc-create-resource_pack-biomes_client",
    "onCommand:bc-create-resource_pack-blocks",
    "onCommand:bc-create-resource_pack-entity",
    "onCommand:bc-create-resource_pack-flipbook_textures",
    "onCommand:bc-create-resource_pack-language",
    "onCommand:bc-create-resource_pack-item_texture",
    "onCommand:bc-create-resource_pack-manifest",
    "onCommand:bc-create-resource_pack-model",
    "onCommand:bc-create-resource_pack-music_definitions",
    "onCommand:bc-create-resource_pack-particle",
    "onCommand:bc-create-resource_pack-render_controller",
    "onCommand:bc-create-resource_pack-sounds",
    "onCommand:bc-create-resource_pack-sound_definitions",
    "onCommand:bc-create-resource_pack-terrain_texture",
