{
    "author": { 
        "name": "Blockception Ltd",
        "url": "https://www.blockception.com/"
    },
    "displayName": "Blockception's Minecraft Bedrock Development",
    "description": "An extension that provides development tools, validations and snippets to help develop minecraft bedrock content",
    "categories": [ "Language Packs", "Programming Languages", "Snippets", "Other", "Formatters"],
    "engines": { "vscode": "^1.22.0" },
    "extensionKind": [ "ui" ],    
    "homepage": "https://github.com/Blockception/VSCode-Bedrock-Development-Extension",
    "license": "BSD 3-Clause \"New\" or \"Revised\" License",
    "name": "blockceptionvscodeminecraftbedrockdevelopmentextension",
    "publisher": "BlockceptionLtd",
    "icon": "",
    "repository": {
        "url": "https://github.com/Blockception/VSCode-Bedrock-Development-Extension",
        "type": "git"
    },
    "version": "0.0.1",

    "contributes": {
        "languages": [
          {
            "id": "bc-minecraft-mcfunction",
            "aliases": [ "Minecraft Mcfunction" ],
            "extensions": [ ".mcfunction" ],
            "configuration": "./minecraft-mcfunction/minecraft-mcfunction-language-configuration.json",
            "filenamePatterns": [ "[a-z0-9_]*\\.mcfunction" ]
          }
        ],
        "grammars": [
          {
            "language": "bc-minecraft-mcfunction",
            "scopeName": "source.bc.minecraft.mcfunction",
            "path": "./minecraft-mcfunctions/syntaxes/minecraft-mcfunction.tmLanguage.json",
            "embeddedLanguages": { 
              "meta.embedded.block.json": "json"
            }
          }
        ],
        "snippets": [
            { "language": "bc-minecraft-mcfunction", "path": "./minecraft-general/snippets/blocks-names.json" },
            { "language": "bc-minecraft-mcfunction", "path": "./minecraft-general/snippets/commands.json" },
            { "language": "bc-minecraft-mcfunction", "path": "./minecraft-general/snippets/effect-names.json" },
            { "language": "bc-minecraft-mcfunction", "path": "./minecraft-general/snippets/enchant-names.json" },
            { "language": "bc-minecraft-mcfunction", "path": "./minecraft-mcfunctions/snippets/mcfunction.json" }
        ]
    }
}