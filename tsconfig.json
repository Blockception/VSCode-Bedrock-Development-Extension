{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": ["ES2019"],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src", 
		"baseUrl": "src",
		"paths": {
			"http://*": ["../../../.deno/deps/http/*"],
			"https://*": ["../../../.deno/deps/https/*"],
			"*.ts": ["*"]
		},
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"include": [
		"./scr/**/*.ts"
	]
}