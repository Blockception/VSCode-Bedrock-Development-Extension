{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "blockception.minecraft.resource.blocks.json",
  "type": "object",
  "title": "The minecraft blocks definition file",
  "description": "TODO description",
  "definitions": {
    "texture": {
      "oneOf": [
        { "type": "string" },
        {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "down": {
              "title": "Down",
              "description": "The texture to be applied to the bottom of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            },
            "up": {
              "title": "Up",
              "description": "The texture to be applied to the top of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            },
            "side": {
              "title": "Side",
              "description": "The texture to be applied to all sides of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            },
            "south": {
              "title": "South",
              "description": "The texture to be applied to the south side of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            },
            "north": {
              "title": "North",
              "description": "The texture to be applied to the north side of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            },
            "west": {
              "title": "West",
              "description": "The texture to be applied to the west side of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            },
            "east": {
              "title": "East",
              "description": "The texture to be applied to the east side of the block",
              "type": "string",
              "pattern": "^[\\w_\\-]+$"
            }
          }
        }
      ]
    }
  },
  "propertyNames": {
    "pattern": "^[\\w_\\-]+$"
  },
  "properties": {
    "format_version": {
      "type": "array",
      "items": [
        { "type": "integer" },
        { "type": "integer" },
        { "type": "integer" }
      ]
    }
  },
  "additionalProperties": {
    "additionalProperties": false,
    "type": "object",
    "title": "Block definition",
    "description": "TODO",
    "properties": {
      "brightness_gamma": {
        "title": "Brightness gamma",
        "description": "TODO",
        "type": "number"
      },
      "carried_textures": {
        "title": "Carried textures",
        "description": "TODO",
        "$ref": "#/definitions/texture"
      },
      "isotropic": {
        "title": "Isotropic",
        "description": "TODO",
        "oneOf": [
          { "type": "boolean" },
          {
            "additionalProperties": false,
            "type": "object",
            "properties": {
              "down": { "type": "boolean" },
              "up": { "type": "boolean" },
              "side": { "type": "boolean" },
              "south": { "type": "boolean" },
              "north": { "type": "boolean" },
              "west": { "type": "boolean" },
              "east": { "type": "boolean" }
            }
          }
        ]
      },
      "sound": {
        "title": "Sound",
        "description": "TODO",
        "type": "string"
      },
      "textures": {
        "title": "Textures",
        "description": "TODO",
        "$ref": "#/definitions/texture"
      }
    }
  }
