{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "minecraft.resource.model.1.8.0",
  "type": "object",
  "title": "The minecraft resourcepack model schema for 1.8.0",
  "description": "The root schema comprises the entire JSON document.",
  "required": [ "format_version" ],
  "definitions": {
    "array_3_integer": { "$ref": "../../../../general/array_3_integer.json" },
    "array_2_number": { "$ref": "../../../../general/array_2_number.json" },
    "array_3_number": { "$ref": "../../../../general/array_3_number.json" }
  },
  "properties": {
    "format_version": {
      "title": "The 1.8.0 format_version",
      "type": "string",
      "pattern": "^1.8.0$"
    }
  },
  "propertyNames": {
    "pattern": "(^geometry\\.|format_version)"
  },
  "additionalProperties": {
    "additionalProperties": false,
    "type": "object",    
    "properties": {
      "identifier": {
        "type":"string",
        "pattern": "^[^:]*$"
      },
      "texturewidth": {
        "type":"integer"
      },
      "textureheight": {
        "type":"integer"
      },
      "visible_bounds_width": {
        "type":"number"
      },
      "visible_bounds_height": {
        "type":"number"
      },
      "visible_bounds_offset": {
        "$ref": "#/definitions/array_3_number"
      },
      "bones":{
        "$ref": "bones.json"
      }
    }
  }
}
