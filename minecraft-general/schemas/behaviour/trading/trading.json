{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "blockception.minecraft.behaviour.trading",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Item": {
      "title": "Item",
      "oneOf": [
        {
          "type": "string"
