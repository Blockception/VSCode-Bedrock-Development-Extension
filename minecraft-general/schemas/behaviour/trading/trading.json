                    "item": { "type": "string", "title": "Item identifier" },
                    "quantity": {
                      "title": "Quantity",
                      "oneOf": [
                        { "type": "integer", "minimum": 1, "title": "Amount" },
                        {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["min", "max"],
                          "properties": {
                            "min": {
