{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "blockception.minecraft.behaviour.trading",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Item": {
      "title": "Item",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "item": {
              "type": "string",
              "title": "Item identifier"
            },
            "price_multiplier": {
              "type": "number",
              "title": "Price multiplier"
            },
            "quantity": {
              "title": "Quantity",
              "oneOf": [
                {
                  "type": "integer",
                  "minimum": 1,
                  "title": "Amount"
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["min", "max"],
                  "properties": {
                    "min": {
                      "type": "integer",
                      "minimum": 1,
                      "title": "Minimum"
                    },
                    "max": {
                      "type": "integer",
                      "minimum": 1,
                      "title": "Maximum"
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "TradeArray": {
      "type": "array",
      "title": "Trades",
      "items": {
        "additionalProperties": false,
        "type": "object",
        "title": "Trade",
        "required": ["wants", "gives"],
        "properties": {
          "gives": {
            "type": "array",
            "title": "Gives",
            "items": {
              "title": "Give",
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "item": {
                      "type": "string",
                      "title": "Item identifier"
                    },
                    "quantity": {
                      "title": "Quantity",
                      "oneOf": [
                        {
                          "type": "integer",
                          "minimum": 1,
                          "title": "Amount"
                        },
                        {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["min", "max"],
                          "properties": {
                            "min": {
                              "type": "integer",
                              "minimum": 1,
                              "title": "Minimum"
                            },
                            "max": {
                              "type": "integer",
                              "minimum": 1,
                              "title": "Maximum"
                            }
                          }
                        }
                      ]
                    },
                    "functions": {
                      "title": "Functions",
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["function"],
                        "allOf": [
                          {
                            "if": {
                              "properties": {
                                "function": {
                                  "type": "string",
                                  "const": "enchant_random_gear"
                                }
                              }
                            },
                            "then": {
                              "$ref": "../loot_tables/functions/enchant_random_gear.json"
                            }
                          },
                          {
                            "if": {
                              "properties": {
                                "function": {
                                  "type": "string",
                                  "const": "enchant_randomly"
                                }
                              }
                            },
                            "then": {
                              "$ref": "../loot_tables/functions/enchant_randomly.json"
                            }
                          },
                          {
                            "if": {
                              "properties": {
                                "function": {
                                  "type": "string",
                                  "const": "enchant_with_levels"
                                }
                              }
                            },
                            "then": {
                              "$ref": "../loot_tables/functions/enchant_with_levels.json"
                            }
