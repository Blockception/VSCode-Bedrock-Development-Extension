                            "then": {
                              "$ref": "../loot_tables/functions/set_lore.json"
                            }
                          },
                          {
                            "if": {
                              "properties": {
                                "function": {
                                  "type": "string",
                                  "const": "set_name"
                                }
                              }
                            },
                            "then": {
                              "$ref": "../loot_tables/functions/set_name.json"
                            }
                          },
                          {
                            "if": {
                              "properties": {
                                "function": {
                                  "type": "string",
                                  "const": "specific_enchants"
                                }
                              }
                            },
                            "then": {
                              "$ref": "../loot_tables/functions/specific_enchants.json"
                            }
                          }
