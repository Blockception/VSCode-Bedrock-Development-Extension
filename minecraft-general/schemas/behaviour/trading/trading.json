        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "item": {
              "type": "string",
              "title": "Item identifier"
            },
            "price_multiplier": {
              "type": "number",
              "title": "Price multiplier"
            },
            "quantity": {
              "title": "Quantity",
              "oneOf": [
                {
                  "type": "integer",
                  "minimum": 1,
                  "title": "Amount"
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["min", "max"],
                  "properties": {
                    "min": {
                      "type": "integer",
                      "minimum": 1,
                      "title": "Minimum"
                    },
                    "max": {
                      "type": "integer",
