  "properties": {
    "tiers": {
      "type": "array",
      "title": "Tiers",
      "description": "A collection of tiers",
      "items": {
        "additionalProperties": false,
        "type": "object",
        "title": "Tier",
        "properties": {
          "trades": {
            "$ref": "#/definitions/TradeArray"
          },
          "total_exp_required": {
            "title": "Total experience required",
            "type": "integer"
          },
          "groups": {
            "type": "array",
            "title": "Groups",
            "description": "A collection of groups",
            "items": {
              "type": "object",
              "title": "Group",
              "additionalProperties": false,
              "properties": {
                "num_to_select": {
                  "title": "Number to select",
                  "type": "integer"
                },
                "trades": {
                  "$ref": "#/definitions/TradeArray"
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
