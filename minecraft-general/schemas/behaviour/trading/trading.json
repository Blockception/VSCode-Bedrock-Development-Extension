                          {
                            "if": {
                              "properties": {
                                "function": {
                                  "type": "string",
                                  "const": "set_data_from_color_index"
                                }
                              }
                            },
                            "then": {
                              "$ref": "../loot_tables/functions/set_data_from_color_index.json"
                            }
