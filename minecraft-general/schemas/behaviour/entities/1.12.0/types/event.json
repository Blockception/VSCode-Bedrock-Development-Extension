{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "blockception.minecraft.entities.1.12.0.event",
  "title": "Event",
  "description": "Minecraft behaviour event 1.12.0",
  "oneOf": [
    {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_\\-:]+$",
      "description": "The event to fire"
