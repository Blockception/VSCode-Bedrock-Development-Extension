{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "minecraft.behaviour.entities.1.8.0.filters.has_equipment",
    "type": "object",
    "title": "Filters has_equipment 1.8.0",
    "additionalProperties": false,
    "description": "Tests for the presence of a named item in the designated slot of the subject entity.",
    "required": [ "value" ],
    "properties": {
        "domain": {
            "$ref": "base_domain.json",
            "description": "The equipment location to test",
            "default": "any",
            "enum": [
                "any",
                "armor",
                "feet",
                "hand",
                "head",
                "leg",
                "tors"
            ]
        },
        "operator": {
            "$ref": "base_operator.json"
        },
        "subject": {
            "$ref": "base_subject.json"
        },
        "value": {
            "$ref": "base_value.json",
            "description": "The item name to look for",
            "type": "string"
        }
    }
}