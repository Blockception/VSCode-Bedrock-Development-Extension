{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Minecraft Language",
  "scopeName": "source.bc.minecraft.language",
  "patterns": [
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#characters" }
  ],
  "fileTypes": [ "lang" ],
  "repository": {
    "strings": {
      "patterns": [
        { "name": "support.type.property-name", "match": "^[^#=]+(?=\\=)" },
        { "name": "keyword.operator", "match": "=" }
      ]
    },
    "characters": {
      "patterns": [
        { "name": "markup.bold", "match": "§l"},
        { "name": "markup.deleted", "match": "§k"},
        { "name": "keyword.control", "match": "§m"},
        { "name": "markup.underline", "match": "§n"},
        { "name": "markup.italic", "match": "§o"},
        { "name": "keyword.control", "match": "§r"},

        { "name": "constant.character", "match": "§0" },
        { "name": "constant.character.dark_blue", "match": "§1" },
        { "name": "constant.character.dark_green", "match": "§2" },
        { "name": "constant.character.dark_aqua", "match": "§3" },
        { "name": "constant.character.dark_red", "match": "§4" },
        { "name": "constant.character.dark_purple", "match": "§5" },
        { "name": "constant.character.gold", "match": "§6" },
        { "name": "constant.character.gray", "match": "§7" },
        { "name": "constant.character.dark_gray", "match": "§8" },
        { "name": "constant.character.blue", "match": "§9" },
        { "name": "constant.character.green", "match": "§a" },
        { "name": "constant.character.aqua", "match": "§b" },
        { "name": "constant.character.red", "match": "§c" },
        { "name": "constant.character.light_purple", "match": "§d" },
        { "name": "constant.character.yellow", "match": "§e" },
        { "name": "constant.character.white", "match": "§f" }
      ]
    },
    "comments": {
      "patterns": [
        { "name": "comment.line", "begin": "##", "end": "$" }
      ]
    }
  }
}
